{
  "name": "trading-card-simulator",
  "type": "module",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "cd apps/frontend && bun run dev",
    "dev:backend": "cd apps/backend && bun run dev",
    "dev:images": "cd apps/images && bun run dev",
    "dev:admin": "cd apps/admin && bun run dev",
    "build": "cd apps/frontend && bun run build",
    "build:frontend": "cd apps/frontend && bun run build",
    "build:backend": "echo 'Backend does not require build'",
    "build:admin": "cd apps/admin && bun run build",
    "preview": "cd apps/frontend && bun run preview",
    "deploy:pages": "bun run build:frontend && wrangler pages deploy apps/frontend/dist --config apps/frontend/wrangler.jsonc",
    "deploy:workers": "cd apps/backend && bun run deploy",
    "deploy:images": "cd apps/images && bun run deploy",
    "deploy": "bun run deploy:pages && bun run deploy:workers && bun run deploy:images",
    "migrate:images": "bun run scripts/migrate-images.ts",
    "setup:local": "bun run scripts/setup-local.ts",
    "setup:db": "cd apps/backend && bunx wrangler d1 migrations apply trading-cards --local",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules bun.lockb apps/*/.vite apps/*/.wrangler && bun install",
    "lint": "biome check apps packages",
    "lint:fix": "biome check --write apps packages --unsafe",
    "format": "biome format --write .",
    "storybook": "cd apps/frontend && bun run storybook",
    "build-storybook": "cd apps/frontend && bun run build-storybook",
    "test": "cd apps/frontend && bun run test",
    "test:ui": "cd apps/frontend && bun run test:ui",
    "test:headed": "cd apps/frontend && bun run test:headed",
    "pre-commit": "lefthook run pre-commit",
    "pre-push": "lefthook run pre-push",
    "validate": "bun run lint && bun run test && bun run build",
    "prepare": "lefthook install"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.6",
    "@cloudflare/workers-types": "^4.20251121.0",
    "@hono/node-server": "^1.19.6",
    "@playwright/test": "^1.56.1",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/react": "^8.6.14",
    "@storybook/react-vite": "^8.6.14",
    "@storybook/test": "^8.6.14",
    "@tailwindcss/vite": "^4.1.17",
    "@types/bun": "latest",
    "@types/node": "^22.5.4",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^5.1.1",
    "lefthook": "^2.0.4",
    "shadcn": "^3.5.0",
    "storybook": "^8.6.14",
    "tailwindcss": "^4.1.17",
    "tailwindcss-animate": "^1.0.7",
    "vite": "^7.2.4",
    "vite-tsconfig-paths": "^5.1.4",
    "wrangler": "^4.50.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.30.2"
  }
}
